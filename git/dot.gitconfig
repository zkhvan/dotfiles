# Global gitconfig
#
# Don't assign global GIT_CONFIG var since it has trouble with [include] when
# you do that
#

# ============================================================================
# Formatting
# ============================================================================

[pretty]
	ld      = %C(yellow)%h %C(reset)%s %C(green)(%cr) %C(blue)<%an>%C(magenta)%d%C(reset)

# ============================================================================

[include]
	path = "~/.dotfiles/git/aliases.gitconfig"

# ============================================================================
# Color
# ============================================================================

[color]
	branch      = auto
	diff        = auto
	grep        = auto
	interactive = auto
	status      = auto
	ui          = auto
	pager       = true

[color "diff-highlight"]
	oldNormal    = red bold
	oldHighlight = red bold 52
	newNormal    = green bold
	newHighlight = green bold 22

# ============================================================================
# Repo settings and command options
# ============================================================================

[init]
	defaultBranch = main

[blame]
	date = short
	showEmail = true

[branch]
	autosetupmerge = always
	autosetuprebase = always

[core]
	compression = -1
	sharedRepository = 0664
	commentchar = "#"
	ignorecase = false
	pager = delta
	hooksPath = "~/.dotfiles/git/hooks"

[diff]
	colorMoved = default
	compactionHeuristic = true
	renames = true
	renameLimit = 12650

[merge]
	conflictstyle = diff3

[interactive]
	diffFilter = delta --color-only --tabs 4

[delta]
	navigate = true
	light = false

[filter "media"]
	clean     = git media clean %f
	smudge    = git media smudge %f
	required  = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required  = true
	process = git-lfs filter-process

[push]
	default = simple

[rebase]
	stat = true
	autosquash = true
	updateRefs = true

[rerere]
	enabled = 1

# ============================================================================
# Programs (assumes may be overridden by OS settings)
# ============================================================================

[gui]
	fontui = -family \"Fira Sans\" -size -10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Fira Mono for Powerline\" -size -10 -weight normal -slant roman -underline 0 -overstrike 0
	commitmsgwidth = 80
	diffcontext = 10

[difftool]
	prompt = false

[mergetool]
	prompt = false

[pager]
	status = true

# ============================================================================

[includeIf "gitdir:/Users/"]
	path = "~/.dotfiles/git/mac.gitconfig"

[include]
	path = "~/.dotfiles/local/gitconfig"

